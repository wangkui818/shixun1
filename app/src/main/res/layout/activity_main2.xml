<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wangkui.shixun.Main2Activity">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="充值提交"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <view
        android:id="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b4b1b1"
        app:layout_constraintTop_toBottomOf="@id/rl"></view>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单信息"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/rl"/>
    <TextView
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应付金额:"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#999"
        app:layout_constraintTop_toBottomOf="@id/message"
        />
    <TextView
        android:id="@+id/message_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单信息:"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#999"
        app:layout_constraintTop_toBottomOf="@id/pay"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"
        app:layout_constraintTop_toBottomOf="@id/message_pay"></view>
    <TextView
        android:id="@+id/fangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="21dp"
        android:textColor="#999"
        android:paddingLeft="20dp"
        android:paddingTop="21dp"
        android:paddingBottom="18dp"
        android:background="#c7c1c1"
        app:layout_constraintTop_toBottomOf="@id/message_pay"/>
</android.support.constraint.ConstraintLayout>
